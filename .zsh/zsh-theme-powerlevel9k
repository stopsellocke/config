if [ ! -d $HOME/.zsh/.oh-my-zsh/custom/themes/powerlevel9k ]
then
  $(git clone https://github.com/bhilburn/powerlevel9k.git ~/.zsh/.oh-my-zsh/custom/themes/powerlevel9k)
fi

